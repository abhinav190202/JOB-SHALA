<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DashBoard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/employerdashboard.css">
</head>

<body>
    <div class="app-container">
        <div class="sidebar">
            <div class="sidebar-header"><div class="app-icon"> Jobshala </div></div>
            <ul class="sidebar-list">
                <li class="sidebar-list-item">
                    <a href="/">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                            class="feather feather-home">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
                            <polyline points="9 22 9 12 15 12 15 22" />
                        </svg>
                        <br>
                        <span">Home</span>
                    </a>
                </li>
                <li class="sidebar-list-item active">
                    <a href="">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                            class="feather feather-shopping-bag">
                            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z" />
                            <line x1="3" y1="6" x2="21" y2="6" />
                            <path d="M16 10a4 4 0 0 1-8 0" />
                        </svg>
                        <span class="sidebartext">DashBoard</span>
                    </a>
                </li>
            </ul>
            <div class="account-info">
                <div class="account-info-picture">
                    <img src="https://images.unsplash.com/photo-1527736947477-2790e28f3443?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTE2fHx3b21hbnxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=900&q=60"
                        alt="Account">
                </div>
                <div class="account-info-name">
                    <%=currentUser.FirstName%>
                        <%=currentUser.LastName%>
                </div>
                <!-- <button class="account-info-more">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        class="feather feather-more-horizontal">
                        <circle cx="12" cy="12" r="1" />
                        <circle cx="19" cy="12" r="1" />
                        <circle cx="5" cy="12" r="1" />
                    </svg>
                </button> -->
            </div>
        </div>
        <div class="app-content">
            <div class="app-content-header">
                <h1 class="app-content-headerText">DashBoard</h1>
                <div class="justify">
                    <form action="/jobs/new">
                        <button class="app-content-headerButton ms-2">Create a new job</button>
                    </form>
                    <form action="/internships/new">
                        <button class="app-content-headerButton ms-2">Create a new internship</button>
                    </form>
                </div>
            </div>

            <div class="products-area-wrapper">
                <div class="mt-3 container">
                    <h4>Jobs</h4>
                </div>
                <div class="products-header">
                    <div class="product-cell role">Role</div>
                    <div class="product-cell location">Location</div>
                    <div class="product-cell posted">Posted on(IST Time)</div>
                    <!-- <div class="product-cell status-cell">Status</div> -->
                    <div class="product-cell applied">Applied</div>
                    <!-- <div class="product-cell hired">Hired</div> -->
                </div>
                <% for(let i = 0; i < createdJobs.length; i++) {%>
                    <a href="/employerdashboard/roles/<%=createdJobs[i]._id%>" class="no-underline">
                <div class="products-row">
                    <div class="product-cell role">
                        <!-- <img src="https://images.unsplash.com/photo-1555041469-a586c61ea9bc?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80"
                            alt="product"> -->
                        <span class="cell-label"><%=createdJobs[i].Name%></span>
                    </div>
                    <div class="product-cell location"><span class="cell-label"><%=createdJobs[i].Location%>, <%=createdJobs[i].State%></span></div>
                    <div class="product-cell posted"><span class="cell-label"><%=createdJobs[i].createdAt.toLocaleString('en-US', { 
                        timeZone: 'IST',
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit',
                        second: '2-digit'
                    });%></span></div>
                    <div class="product-cell applied"><span class="cell-label"><%=createdJobs[i].Applicants.length%></span></div>
                </div>
            </a>
                <% } %>
                <div class="con">
           
                </div>
                <div class="mt-3 container">
                    <h4>Internships</h4>
                </div>
                <div class="products-header">
                    <div class="product-cell role">Role</div>
                    <div class="product-cell location">Location</div>
                    <div class="product-cell posted">Posted on(IST Time)</div>
                    <!-- <div class="product-cell status-cell">Status</div> -->
                    <div class="product-cell applied">Applied</div>
                    <!-- <div class="product-cell hired">Hired</div> -->
                </div>
                <% for(let i = 0; i < createdInternships.length; i++) {%>
                    <a href="/employerdashboard/roles/intern/<%=createdInternships[i]._id%>" class="no-underline">
                <div class="products-row">
                    <div class="product-cell role">
                        <!-- <img src="https://images.unsplash.com/photo-1555041469-a586c61ea9bc?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80"
                            alt="product"> -->
                        <span class="cell-label"><%=createdInternships[i].Name%></span>
                    </div>
                    <div class="product-cell location"><span class="cell-label"><%=createdInternships[i].Location%>, <%=createdInternships[i].State%></span></div>
                    <div class="product-cell posted"><span class="cell-label"><%=createdInternships[i].createdAt.toLocaleString('en-US', { 
                        timeZone: 'IST',
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit',
                        second: '2-digit'
                    });%></span></div>
                    <div class="product-cell applied"><span class="cell-label"><%=createdInternships[i].Applicants.length%></span></div>
                </div>
            </a>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>