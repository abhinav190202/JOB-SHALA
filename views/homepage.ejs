<% layout('layouts/boilerplate') %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="css/homepage.css">
    <% const State=["Karnataka", "Delhi" , "Andhra Pradesh" , "Maharashtra" , "Tamil Nadu" , "Maharashtra"
        , "West Bengal" , "Rajasthan" ] %>
        <% const City=["Bangalore", "North Delhi" , "Hyderabad" , "Mumbai" , "Chennai" , "Pune" , "Kolkata" , "Jaipur" ]
            %>
            <% const Image=["/icons/bangalore.png", "/icons/delhi.png" , "/icons/hyderabad.png" , "/icons/mumbai.png"
                , "/icons/chennai.png" , "/icons/pune.png" , "/icons/kolkata.png" , "/icons/jaipur.png" ] %>
                <% const Roles=["Software Engineer", "Data Analyst" , "Manager" , "Back End" , "Front End"
                    , "Graphic Designer" , "Digital Marketing" , "Machine Learning" ] %>
                    <% const Image2=["/icons/sde.png", "/icons/dataanalyst.png" , "/icons/manager.png"
                        , "/icons/backend.png" , "/icons/frontend.png" , "/icons/graphicdesigner.png"
                        , "/icons/digitalmarketing.png" , "/icons/machinelearning.png" ] %>
                        <div class="head-img mt-3">
                            <img class="head" src="images/heading.png" alt="">
                        </div>
                        <div class="image-slide" id="image-slide">
                            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-indicators">
                                    <button type="button" data-bs-target="#carouselExampleIndicators"
                                        data-bs-slide-to="0" class="active" aria-current="true"
                                        aria-label="Slide 1"></button>
                                    <button type="button" data-bs-target="#carouselExampleIndicators"
                                        data-bs-slide-to="1" aria-label="Slide 2"></button>
                                    <button type="button" data-bs-target="#carouselExampleIndicators"
                                        data-bs-slide-to="2" aria-label="Slide 3"></button>
                                    <button type="button" data-bs-target="#carouselExampleIndicators"
                                        data-bs-slide-to="3" aria-label="Slide 3"></button>
                                </div>
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="images/CP.png" class="d-block w-100" alt="...">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="images/WebD.jpg" class="d-block w-100" alt="...">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="images/AppD.png" class="d-block w-100" alt="...">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="images/ML.jpg" class="d-block w-100" alt="...">
                                    </div>
                                </div>
                                <button class="carousel-control-prev" type="button"
                                    data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button"
                                    data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        </div>

                        <div class="internships" id="internships">
                            <h1 class="mb-5">Internships</h1>

                            <h3 id="secondary-heading">Popular Cities<a href="/internships">
                                    <span class="color">View all internships ><i
                                            class="material-icons icon"></i></span></a>
                            </h3>
                            <div class="row justify-content-center">
                                <%for(let i=0; i < State.length; i++){%>
                                    <div class="col-lg-1 col-sm-3 col-6">
                                        <form action="/internships" method="get" id='myForm1'>
                                            <button type="submit" class="link-button">
                                                <div class="card h-100 text-center">
                                                    <img src="<%=Image[i]%>" class="card-img-top" alt="..." />
                                                    <div class="card-body">
                                                        <h5 class="card-text">
                                                            <input type="text" hidden class="form-control" name="State"
                                                                id="State" value="<%=State[i]%>">
                                                            <input type="text" hidden class="form-control"
                                                                name="Location" id="City" value="<%=City[i]%>">
                                                            <div>
                                                                <%=City[i]%>
                                                            </div>
                                                        </h5>
                                                    </div>
                                                </div>
                                            </button>
                                        </form>
                                    </div>
                                    <%}%>
                            </div>
                            <h3 id="secondary-heading">Popular Categories</h3>
                            <div class="row justify-content-center">
                                <%for(let i=0; i < State.length; i++){%>
                                    <div class="col-lg-1 col-sm-3 col-6">
                                        <form action="/internships" method="get" id='myForm1'>
                                            <button type="submit" class="link-button">
                                                <div class="card h-100 text-center">
                                                    <img src="<%=Image2[i]%>" class="card-img-top" alt="..." />
                                                    <div class="card-body">
                                                        <h5 class="card-text">
                                                            <input type="text" hidden class="form-control" name="title"
                                                                id="Role" value="<%=Roles[i]%>">
                                                            <div>
                                                                <%=Roles[i]%>
                                                            </div>
                                                        </h5>
                                                    </div>
                                                </div>
                                            </button>
                                        </form>
                                    </div>
                                    <%}%>
                            </div>
                        </div>
